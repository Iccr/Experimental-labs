<% if user_signed_in? %>
  <%= link_to "new post", new_post_path, class: "glyphicon glyphicon-plus btn btn-danger " %>
  <%= render "form"%>
<%else%>
  <p class = 'alert alert-success'>
    Sign in to add post or comment
  </p>
<%end%>

<% @posts.each do |post|%>
<div class = "post">
 <h2><%= post.title%><br></h2>
  <%= post.description%><br>
</div>

<%end%>
